<%- model_class = Survey -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<%= render :partial => "shared/breadcrumbs" %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @survey.name %></dd>  
  <dt><strong><%= model_class.human_attribute_name(:survey_type) %>:</strong></dt>
  <dd><%= @survey.survey_type.name%></dd>
  <dt><strong><%= model_class.human_attribute_name(:questions) %>:</strong></dt>
  <%i=1%>
  <% @survey.questions.sort{ |a,b| a.item <=> b.item }.each do |c| %>
  <dd><%=i%>. <%= c.item %></dd>
    <%i=i+1%>
  <% end %>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              surveys_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_survey_path(@survey), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              survey_path(@survey),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
