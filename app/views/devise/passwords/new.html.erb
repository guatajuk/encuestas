<div id="login-section" class="span4 offset4">
  <h2> <%= t('forgot_password') %> </h2>
<hr>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field  input-prepend text">
    <span class="add-on"><i class="icon-envelope"></i></span>
    <%= f.email_field :email, autofocus: true, :placeholder => t('email') %>
  </div>

  <div class="actions span12">
    <%= f.submit "Send me reset password instructions  >>", :class => "btn btn-primary span12" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>